{
  "compilerOptions": {
    "alwaysStrict": true,
    "lib": [
      "es6",
      "dom"
    ],
    "strict": false,
    "noUnusedLocals": true,
    "noEmit": true,
    "pretty": true,
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "../**/*.spec.ts"
  ]
}