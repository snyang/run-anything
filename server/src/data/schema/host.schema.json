{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "run anything host schema",
  "description": "run anything host schema",
  "type": "object",
  "properties": {
    "properties": {
      "description": "root: properties(properties[])",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "description": "property name(properties[].name)",
            "type": "string"
          },
          "type": {
            "description": "property type(properties[].type)",
            "anyOf": [
              {
                "type": "string",
                "enum": [
                  "server",
                  "extension"
                ]
              },
              {
                "type": "string"
              }
            ]
          },
          "value": {
            "description": "property value(properties[].value)",
            "anyOf": [
              {
                "description": "server value",
                "type": "object",
                "properties": {
                  "hostUrl": {
                    "type": "string"
                  },
                  "isHost": {
                    "type": "boolean"
                  }
                },
                "required": [
                  "hostUrl"
                ]
              },
              {
                "description": "extension value",
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                },
                "required": [
                  "name"
                ]
              },
              {
                "description": "other values",
                "type": "object"
              }
            ]
          }
        },
        "required": [
          "type",
          "name",
          "value"
        ]
      }
    }
  },
  "required": [
    "properties"
  ]
}